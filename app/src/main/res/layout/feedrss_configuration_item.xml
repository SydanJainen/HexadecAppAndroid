<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              tools:context=".view.ConfigurationWorkflow"
              tools:showIn="@layout/workflow_view"
              android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGrey"
            card_view:contentPadding="5dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp">

        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Workflow1"
                    android:id="@+id/textViewFeedConfPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorDarkBlue"/>

            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Workflow1"
                    android:id="@+id/textViewFeedConfName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorDarkBlue"/>
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Workflow1"
                    android:id="@+id/textViewFeedConfType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorDarkBlue"/>

            <EditText
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Workflow1"
                    android:id="@+id/editTextConfFeedurl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimaryDark" android:gravity="end"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:backgroundTint="@color/colorLightGrey" android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>